@page "/vocabulary"
@using french_app.Services
@inject VocabularyService Vocab

<PageTitle>Vocabulary</PageTitle>

<div class="container-fluid">

    <!-- HEADER -->
    <div class="p-4 p-md-5 rounded-4 shadow-sm mb-4 text-light"
         style="background: linear-gradient(135deg,#141a3d,#4f5bd5); border:1px solid rgba(255,255,255,.08);">

        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="mb-1">üìö Vocabulary Packs</h1>
                <div class="opacity-75">
                    Browse weekly term sets
                </div>
            </div>

            <a class="btn btn-light" href="vocabulary/study">
                Study Mode ‚Üí
            </a>
        </div>
    </div>

    <!-- STATES -->
    @if (_loading)
    {
        <div class="card border-0 shadow text-light" style="background:#141a3d;">
            <div class="card-body d-flex gap-3 align-items-center">
                <div class="spinner-border"></div>
                <div>Loading weeks‚Ä¶</div>
            </div>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger shadow-sm">
            @_error
            <div class="small mt-2">
                Expected <code>wwwroot/files/index.json</code>
            </div>
        </div>
    }
    else if (_weeks.Count == 0)
    {
        <div class="alert alert-warning shadow-sm">
            No weeks found.
        </div>
    }
    else
    {
        <!-- GRID -->
        <div class="row g-4">
            @foreach (var w in _weeks)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <a class="text-decoration-none"
                       href="vocabulary/@w">

                        <div class="card h-100 border-0 shadow hover-card text-light"
                             style="background: linear-gradient(180deg,#141a3d,#1b2250); border:1px solid rgba(255,255,255,.06);">

                            <div class="card-body">
                                <div class="fs-3 mb-2">üóÇÔ∏è</div>

                                <h5 class="mb-1">@DisplayWeek(w)</h5>

                                <div class="opacity-75 small">
                                    View vocabulary
                                </div>
                            </div>

                            <div class="card-footer bg-transparent border-0 small opacity-50">
                                Open ‚Üí
                            </div>

                        </div>
                    </a>
                </div>
            }
        </div>
    }

</div>

@code {
    private bool _loading = true;
    private string? _error;
    private List<string> _weeks = new();

    protected override async Task OnInitializedAsync()
    {
        try { _weeks = (await Vocab.GetAvailableWeeksAsync()).ToList(); }
        catch (Exception ex) { _error = ex.Message; }
        finally { _loading = false; }
    }

    private static string DisplayWeek(string weekId)
        => string.IsNullOrWhiteSpace(weekId)
            ? "Week"
            : weekId.Replace('-', ' ').Replace('_', ' ');
}
