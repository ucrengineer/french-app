@page "/vocabulary/study"
@using french_app.Models
@using french_app.Services
@inject VocabularyService Vocab

<PageTitle>Study</PageTitle>

<div class="container-fluid">

    <!-- HEADER -->
    <div class="p-4 p-md-5 rounded-4 shadow-sm mb-4 text-light"
         style="background: linear-gradient(135deg,#1b2250,#4f5bd5); border:1px solid rgba(255,255,255,.08);">

        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="mb-1">üìñ Study Flashcards</h1>
                <div class="opacity-75">
                    Choose a week or study everything together
                </div>
            </div>

            <a class="btn btn-outline-light" href="vocabulary">
                ‚Üê Weeks
            </a>
        </div>
    </div>

    <!-- STATES -->
    @if (_loading)
    {
        <div class="card border-0 shadow text-light"
             style="background:#141a3d;">
            <div class="card-body d-flex align-items-center gap-3">
                <div class="spinner-border"></div>
                <div>Loading vocabulary weeks‚Ä¶</div>
            </div>
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(_error))
    {
        <div class="alert alert-danger shadow-sm">
            @_error
        </div>
    }
    else
    {
        <!-- GRID -->
        <div class="row g-4">

            <!-- ALL WEEKS -->
            <div class="col-12 col-md-6 col-xl-4">
                <a class="text-decoration-none"
                   href="vocabulary/study/all">

                    <div class="card h-100 border-0 shadow hover-card text-light"
                         style="background: linear-gradient(180deg,#1b2250,#27318a);">

                        <div class="card-body">
                            <div class="fs-2 mb-2">üî•</div>
                            <h4 class="mb-1">All Weeks</h4>
                            <div class="opacity-75">
                                Mixed master deck
                            </div>
                        </div>

                        <div class="card-footer border-0 bg-transparent opacity-75 small">
                            @_weeks.Count week sets included
                        </div>

                    </div>
                </a>
            </div>

            <!-- WEEK CARDS -->
            @foreach (var w in _weeks)
            {
                <div class="col-12 col-md-6 col-xl-4">
                    <a class="text-decoration-none"
                       href="vocabulary/study/@w">

                        <div class="card h-100 border-0 shadow hover-card text-light"
                             style="background: linear-gradient(180deg,#141a3d,#1b2250); border:1px solid rgba(255,255,255,.06);">

                            <div class="card-body">
                                <div class="fs-3 mb-2">üóÇÔ∏è</div>

                                <h5 class="mb-1">
                                    @DisplayWeek(w)
                                </h5>

                                <div class="opacity-75 small">
                                    Flashcard deck
                                </div>
                            </div>

                            <div class="card-footer border-0 bg-transparent small opacity-50">
                                Open study mode ‚Üí
                            </div>

                        </div>
                    </a>
                </div>
            }

        </div>
    }

</div>

@code {
    private bool _loading = true;
    private string? _error;
    private List<string> _weeks = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _weeks = (await Vocab.GetAvailableWeeksAsync()).ToList();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private static string DisplayWeek(string weekId)
        => string.IsNullOrWhiteSpace(weekId)
            ? "Week"
            : weekId.Replace('-', ' ').Replace('_', ' ');
}
